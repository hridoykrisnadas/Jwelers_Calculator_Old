<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09165C"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.moontechit.jwellerscalculator.Tk_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edi_text_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edi_text_border"
                android:gravity="center_horizontal"
                android:text="টাকার হিসাব করুন"
                android:textColor="#3F51B5"
                android:textSize="25sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/edi_text_border"
                android:gravity="center"
                android:hint="বর্তমান সোনার দাম ‍লিখুন এখানে (১ ভরি)"
                android:inputType="number"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/Vori"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="কতো ভরি তা লিখুন"
                    android:inputType="number"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Ana"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="কতো আনা তা লিখুন"
                    android:inputType="number"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/Rothi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="কতো রথি তা লিখুন"
                    android:inputType="number"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Point"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="কতো পয়েন্ট তা লিখুন"
                    android:inputType="number"
                    android:textStyle="bold" />

            </LinearLayout>


            <Button
                android:id="@+id/calculation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:foregroundGravity="center"
                android:text="Calculation"
                android:textColorHint="#3D5AFE"
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/calculation"
                android:layout_margin="5dp"
                android:background="@drawable/edi_text_border"
                android:gravity="center"
                android:text=""
                android:textColor="#f000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/definate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/result"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edi_text_border"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="#f000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>