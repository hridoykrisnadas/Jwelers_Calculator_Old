<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09165C"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Sub_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edi_text_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edi_text_border"
                android:gravity="center_horizontal"
                android:text="গহনার বিয়োগ করুন"
                android:textColor="#3F51B5"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="১ম গহনার ওজন লিখুন"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/Vori1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="ভরির ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Ana1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="আনার ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/Rothi1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="রথির ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Point1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="পয়েন্টের ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="২য় গহনার ওজন লিখুন"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/Vori2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="ভরির ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Ana2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="আনার ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/Rothi2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="রথির ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Point2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edi_text_border"
                    android:gravity="center"
                    android:hint="পয়েন্টের ওজন"
                    android:inputType="number"
                    android:textStyle="bold" />

            </LinearLayout>


            <Button
                android:id="@+id/subButtonId"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_border"
                android:foregroundGravity="center"
                android:text="Calculation"
                android:textColorHint="#3D5AFE"
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/SummationBtn"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edi_text_border"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="#f000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>