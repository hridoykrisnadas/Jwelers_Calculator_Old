<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="#DABC5B"></ViewFlipper>

    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_below="@id/viewFlipper"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#f000">

        <Button
            android:layout_weight="1"
            android:id="@+id/TkButtonId"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#00B0FF"
            android:foregroundGravity="center"
            android:text="টাকার হিসাব করুন"
            android:textColorHint="#3D5AFE"
            android:textSize="15pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SumButtonId"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="#F44336"
            android:foregroundGravity="center"
            android:text="গহনার ওজন যোগ করুন"
            android:textColorHint="#3D5AFE"
            android:textSize="15pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SponsoredButtonID"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:foregroundGravity="center"
            android:text="Sponsored By"
            android:textAllCaps="false"
            android:textColorHint="#3D5AFE"
            android:textSize="15pt"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>