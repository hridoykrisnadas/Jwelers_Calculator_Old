<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09165C"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">


    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="#DABC5B">

    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewFlipper"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:weightSum="7">

        <Button
            android:id="@+id/TkButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FF6230"
            android:drawableTint="#3D5AFE"
            android:foregroundGravity="center"
            android:text="@string/tk"
            android:textColor="#000000"
            android:textSize="15pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SumButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFEB3B"
            android:foregroundGravity="center"
            android:text="@string/sum"
            android:textColor="#000000"
            android:textColorHint="#3D5AFE"
            android:textSize="15pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/subButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FF5722"
            android:foregroundGravity="center"
            android:text="@string/sub"
            android:textColor="#000000"
            android:textColorHint="#3D5AFE"
            android:textSize="15pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SponsoredButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:foregroundGravity="center"
            android:text="@string/sponsored_by"
            android:textAllCaps="false"
            android:textColorHint="#3D5AFE"
            android:textSize="15pt"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>